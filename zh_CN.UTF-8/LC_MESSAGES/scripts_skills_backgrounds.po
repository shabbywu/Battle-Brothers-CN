msgstr "四指(Fourfingers)"

# scripts/skills/backgrounds/raider_background.nut
msgid "Ravensblack"
msgstr "雷文斯布莱克(Ravensblack)"

# scripts/skills/backgrounds/raider_background.nut
msgid "the Defiant"
msgstr "反抗者(the Defiant)"

